<h2 class="pb-2">Listing Companies</h2>

<table class="table table-striped">
  <thead>

    <tr>
      <th>ID</th>
      <th>Company Name</th>
      <th>Details</th>
      <th class="text-center">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @company.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.details %></td>
        <td class="text-center">
          <%= link_to "Show", company_path(company), class: "btn btn-primary btn-sm"%>
          <%= link_to "Destroy", company_path(company), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create New Company", new_company_path, class: "btn btn-primary" %>
